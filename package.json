{
  "name": "novatab-extension",
  "version": "1.1.1",
  "description": "A beautiful, customizable new tab page extension for Chrome",
  "main": "background.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "utils.js",
      "!node_modules/**",
      "!test/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AllInStride/novatab-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "new-tab",
    "bookmarks",
    "customization"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AllInStride/novatab-extension/issues"
  },
  "homepage": "https://github.com/AllInStride/novatab-extension#readme",
  "devDependencies": {
    "@types/chrome": "^0.1.31",
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0"
  }
}
